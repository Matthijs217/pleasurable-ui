{% render 'partials/head.liquid' %}
<script src="scripts/script.js" defer></script>

<main class="main-home">
{% render 'partials/header.liquid' %}

    <section class="hero">
        <h1 class="hero-title">De beste digitale bureaus van nederland</h1>
        <p class="hero-text">Dutch Digital Agency (DDA) verenigt en verbindt {{ leden | size }} toonaangevende digitale bureaus. Samen maken we de wereld elke dag een beetje slimmer.</p>
    
        <div class="hero-links">
            <span class="publication-btn">
                {% render 'partials/button.liquid', submit:"WORD LID" %}
            </span>
            
            <a class="zoek-een-bureau-link" href="/zoek-een-bureau">Zoek een bureau
                <img src="/img/arrow.svg" alt="" width="15" height="15">
            </a>
        </div>
   
    </section>

{% render 'partials/partner-carousel.liquid' %}
{% render 'partials/section-title.liquid', category: "EVENTS", message: "HIER KAN JE ONS DE KOMENDE TIJD VINDEN", link_text:"ALLE EVENTS", href:"/events" %}


<div class="event-main-container">
    {% for eventsListCard in eventsListCards %}
    {% render 'partials/foto-card.liquid',
        img-src: eventsListCard.photo.id,
        img-width: eventsListCard.photo.width,
        img-height: eventsListCard.photo.height,
        card-label: eventsListCard.title,       
        card-title: eventsListCard.title,
        card-date: eventsListCard.date,
        card-location: eventsListCard.location,
        image-alt: eventsListCard.title
        card-href-link: "event/detail-event/" | append: eventsListCard.id
    %}
    {% endfor %}

    <div class="events-container">
        {% for eventsList in eventsLists %}
        {% render 'partials/event-list.liquid',
            card-label: eventsList.title,       
            card-title: eventsList.title,
            card-date: eventsList.date,
            card-location: eventsList.location,
            card-href-link: "event/detail-event/" | append: eventsList.id
        %}
        {% endfor %}
    </div>
</div>

{% render 'partials/section-title.liquid', category:"VACATURES", message:"DE BESTE BUREAUS ZOEKEN DE BESTE MENSEN", link_text:"ALLE VACATURES", href:"/vacatures" %}
{% render 'partials/list-table.liquid', vacatures: vacatures %}
{% render 'partials/section-title.liquid', category:"PUBLICATIES", message:"HET LAATSTE NIEUWS", link_text:"ALLE PUBLICATIES", href:"publicaties" %}

<div class="container">
    {% for event in events %}
    {% render 'partials/foto-card.liquid',
        img-src: event.photo.id,
        img-width: event.photo.width,
        img-height: event.photo.height,
        card-label: event.title,       
        card-title: event.title,
        card-date: event.date,
        card-location: event.location,
        image-alt: event.title,
        card-href-link: "event/detail-event/" | append: event.id
    %}
    {% endfor %}
</div>

{% render 'partials/news-ad.liquid', message: "Meld je aan voor onze nieuwsbrief", submit: "aanmelden" %}
{% render 'partials/lid-section.liquid' %}
{% render 'partials/partner-ad.liquid', submit: "WORD PARTNER" %}
{% render 'partials/footer.liquid' %}
  
</main>


